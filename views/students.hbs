<h1>{{title}}</h1>

<hr>
<p>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>#<b>&nbsp;{{@index}}</b>{{firstName}}</td>
                <td>{{lastName}}</td>
                <td>{{email}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</p>