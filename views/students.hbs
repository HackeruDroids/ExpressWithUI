<h1>{{title}}</h1>

<div class="jumbotron">
    <h1 class="display-4">Merav College</h1>
    <p class="lead">Merav is our Hero!</p>
    <hr class="my-4">
    <p class="lead">
        <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
    </p>
</div>

<hr>
<p>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>#
                    <b>&nbsp;{{@index}}&nbsp;</b>{{firstName}}</td>
                <td>{{lastName}}</td>
                <td>{{email}}</td>
                <td>
                    <a class="no-underline" href="/edit?id={{@index}}">
                        <img src="images/glyphicons/png/glyphicons-151-edit.png" alt="">
                    </a>
                    <!--  data-toggle & data-target triggers modal -->
                    <img  data-toggle="modal" data-target="#exampleModal-{{@index}}" class="btn" src="images/glyphicons/png/glyphicons-17-bin.png" alt="">


                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal-{{@index}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                           Are you sure you want to delete {{firstName}}?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary"  data-dismiss="modal">Delete</button>
                        </div>
                        </div>
                    </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</p>